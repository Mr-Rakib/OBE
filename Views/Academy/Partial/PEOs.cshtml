@model IEnumerable<OBETools.Models.PEO>

<div class="text-right col-md-12 pb-2">
    <a class="btn btn-info btn-custom-style" asp-action="CreateMission" asp-controller="Academy"><i class="fas fa-user-plus"></i>&nbsp;Create Mission</a>
</div>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display MultipleDataTable" id="dataTable_User" width="100%" cellspacing="0">
                <thead>
                    <tr class="custom-table-user text-center">
                        <th class="text-left">@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-center" style="font-size: .75em">
                                <a class="p-1" asp-action="EditMission" asp-controller="Academy" asp-route-id="@item.Id"><i class="far fa-edit text-info"></i></a>
                                <a class="p-1" asp-action="DetailsMission" asp-controller="Academy" asp-route-id="@item.Id"><i class="far fa-eye text-secondary"></i></a>
                                <a class="p-1" asp-action="DeleteMission" asp-controller="Academy" asp-route-id="@item.Id"><i class="far fa-trash-alt text-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>