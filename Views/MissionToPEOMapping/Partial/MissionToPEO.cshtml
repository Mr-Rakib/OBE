@model IEnumerable<OBETools.Models.MissionToPEOMapping>

@{
    int count = 1;
}

<div class="text-right col-md-12 pb-2">
    <a class="btn btn-info btn-custom-style" asp-action="Create" asp-controller="MissionToPEOMapping"><i class="fas fa-plus-circle"></i>&nbsp;Map</a>
</div>
<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display MultipleDataTable" id="dataTable_User" width="100%" cellspacing="0">
                <thead>
                    <tr class="custom-table-user text-center">
                        <th class="text-left">Sl No.</th>
                        <th>@Html.DisplayNameFor(model => model.Mission.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.PEO.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Points)</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(count++)</td>
                            <td>@Html.DisplayFor(modelItem => item.Mission.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.PEO.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Points)</td>
                            <td class="text-center" style="font-size: .75em">
                                <a class="p-1" asp-action="Edit" asp-controller="MissionToPEOMapping" asp-route-id="@item.Id"><i class="far fa-edit text-info"></i></a>
                                <a class="p-2" title="View Details" data-toggle="modal" data-target="#view-mission-modal" data-id="@item.Id"><i class="far fa-eye text-secondery"></i></a>
                                <a class="p-1" onclick="return confirm('Are you sure you want to delete?')" asp-action="Delete" asp-controller="MissionToPEOMapping" asp-route-id="@item.Id"><i class="far fa-trash-alt text-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
